{
  "name": "npm-packages",
  "private": true,
  "license": "MIT",
  "repository": "github:ezweb/npm-packages",
  "scripts": {
    "clean": "git clean -dfqX -- ./node_modules **/{dist,node_modules}/ **/tsconfig*tsbuildinfo",
    "compile": "tsc --build tsconfig.build.json",
    "compile:clean": "tsc --build tsconfig.build.json --clean",
    "watch": "tsc --build tsconfig.build.json --watch",
    "postinstall": "lerna run prepare && npm run compile",
    "pretest": "tsc --build tsconfig.json",
    "test": "jest --verbose",
    "test:clean": "jest --clearCache",
    "test:watch": "jest --verbose --watchAll",
    "testonly": "npm test",
    "test:ci": "npm run coverage -- --ci --maxWorkers=2  --reporters=default --reporters=jest-junit",
    "coverage": "npm test -- --coverage",
    "coverage:upload": "codecov",
    "prettier-check": "prettier --check ."
  },
  "engines": {
    "node": ">=16",
    "npm": "7.x"
  },
  "dependencies": {
    "@ezweb/ts-config-loader": "file:packages/ts-config-loader"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.12",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^27.0.6",
    "jest-config": "^27.0.6",
    "jest-junit": "^12.2.0",
    "prettier": "^2.1.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "bracketSpacing": true,
    "printWidth": 200,
    "arrowParens": "always",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  }
}
